{
  "compilerOptions": {
    "outDir": "ts-build",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2016",
    "strictNullChecks": true,
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "actions": ["actions/*"],
      "constants": ["constants/*"],
      "containers":["containers/*"],
      "service": ["service/*"],
      "mocks": ["mocks"]
    },
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "priv",
    "ts-build"
  ]
}