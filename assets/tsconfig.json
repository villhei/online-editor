{
  "compilerOptions": {
    "outDir": "ts-build",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "strictNullChecks": true,
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "lib": [
      "es2017",
      "dom"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "actions": [
        "actions/*"
      ],
      "constants": [
        "constants/*"
      ],
      "containers": [
        "containers/*"
      ],
      "components": [
        "components/*"
      ],
      "service": [
        "service/*"
      ],
      "reducers": [
        "reducers/*"
      ],
      "mocks": [
        "mocks/*"
      ]
    },
    "allowJs": true
  },
  "fils": [
    "src/app.tsx"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules",
    "priv",
    "ts-build"
  ]
}