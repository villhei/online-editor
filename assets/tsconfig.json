{
  "compilerOptions": {
    "outDir": "ts-build",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "",
    "lib": [
      "es2017",
      "dom",
    ],
    "types": [
      "node",
      "jest",
      "jest-enzyme"
    ],
    "paths": {
      "library/*": [
        "src/library/*"
      ],
      "actions/*": [
        "src/actions/*"
      ],
      "constants/*": [
        "src/constants/*"
      ],
      "containers/*": [
        "src/containers/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "middleware/*": [
        "src/middleware/*"
      ],
      "service/*": [
        "src/service/*"
      ],
      "reducers/*": [
        "src/reducers/*"
      ],
      "main/*": [
        "src/*"
      ]
    },
    "allowJs": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "priv",
    "ts-build"
  ]
}